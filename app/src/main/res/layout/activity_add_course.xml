<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="comp3350.student_echo.presentation.AddCourseActivity">


    <TextView
        android:id="@+id/new_courseID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:text="Course ID"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/courseID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the course ID"
        android:textAlignment="center"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/new_courseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Course Name"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/courseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the course name"
        android:textAlignment="center"
        android:textSize="25sp" />


    <TextView
        android:id="@+id/new_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Department"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/department"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the department"
        android:textAlignment="center"
        android:textSize="25sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:onClick="buttonCreateNewCourse"
            android:text="Create"
            android:textSize="25sp" />
    </RelativeLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <!-- Instructor information text view -->
    <TextView
        android:id="@+id/instructorInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructor: Instructor Name"
        android:textSize="30sp" />

    <!-- Instructor average rating text view -->
    <TextView
        android:id="@+id/instructorOverallRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Overall rating"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/instructorDifficultyRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Difficult rating"
        android:textSize="30sp" />

    <!-- RecyclerView for displaying reviews list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reviewsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Button for writing a review -->
    <Button
        android:id="@+id/reviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonWriteReviewOnClick"
        android:text="Write Review" />

</LinearLayout>

